<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(<%= image_path('cocktail.jpg') %>)">

  <div class="container text-center">
      <span id="banner-typed-text"></span>
      <%= link_to "Create new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>
<div class = "container text-center">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class = "card-category" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
      <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
      </div>
    <% end %>
  </div>


  <div class="footer text-center">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
  </div>
</div>
